@model IEnumerable<BPEC.Models.Certificate>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="TitleString"><b>Certificates Home</b></div>
<br/>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table border="1" width="100%" style="border:solid 1px black;" cellpadding="5">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CertificateName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LasyUpdatedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CertificateName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastUpdatedBy)
        </td>
        <td>
            @item.LasyUpdatedDate.ToString("dd/MM/yyyy")
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CertificateID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CertificateID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CertificateID })
        </td>
    </tr>
}

</table>
