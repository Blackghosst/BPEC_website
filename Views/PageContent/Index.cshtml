@model IEnumerable<BPEC.Models.PageContent>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<div class="TitleString"><b>Pages Content Home</b></div>
<br/>

<p>
    @*Html.ActionLink("Create New", "Create")*@
</p>
<table border="1" width="100%" style="border:solid 1px black;" cellpadding="5">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PageCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PageDisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LasyUpdatedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PageCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PageDisplayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastUpdatedBy)
        </td>
        <td>
            @item.LasyUpdatedDate.ToString("dd/MM/yyyy")
        </td>
        <td align="center">
            @Html.ActionLink("Edit", "Edit", new { id = item.PageContentID }, new { @class="NormalLink" }) |
            @Html.ActionLink("Details", "Details", new { id=item.PageContentID}, new { @class="NormalLink" }) <!--|-->
            @*Html.ActionLink("Delete", "Delete", new { id=item.PageContentID })*@
        </td>
    </tr>
}

</table>
