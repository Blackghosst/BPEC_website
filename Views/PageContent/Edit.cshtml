<!-- Place inside the <head> of your HTML -->
<script type="text/javascript" src="~/Scripts/tinymce/tinymce.min.js"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        theme: "modern",
        plugins: [
            "advlist autolink lists link image charmap print preview hr anchor pagebreak",
            "searchreplace wordcount visualblocks visualchars code fullscreen",
            "insertdatetime media nonbreaking save table contextmenu directionality",
            "emoticons template paste textcolor"
        ],
        toolbar1: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
        toolbar2: "print preview media | forecolor backcolor emoticons",
        image_advtab: true
    });
</script>
@model BPEC.Models.PageContent

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    
    <fieldset>
        <legend>PageContent</legend>

        @Html.HiddenFor(model => model.PageContentID)

        <div class="editor-label">
            @Html.LabelFor(model => model.PageCode)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.PageCode, new { @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.PageCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PageDisplayName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.PageDisplayName, new { @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.PageDisplayName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PageContentHTML)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PageContentHTML)
            @Html.ValidationMessageFor(model => model.PageContentHTML)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LastUpdatedBy)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.LastUpdatedBy,new { @readonly="readonly"})
            @Html.ValidationMessageFor(model => model.LastUpdatedBy)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LasyUpdatedDate)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.LasyUpdatedDate, new { @Value = Model.LasyUpdatedDate.ToString("dd/MM/yyyy"), @readonly="readonly"})
            @Html.ValidationMessageFor(model => model.LasyUpdatedDate)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
